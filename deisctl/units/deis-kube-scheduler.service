[Unit]
Description=Kubernetes Scheduler
Documentation=https://github.com/GoogleCloudPlatform/kubernetes
Requires=install-kube-scheduler.service
After=install-kube-scheduler.service

[Service]
EnvironmentFile=/etc/environment
ExecStartPre=/usr/bin/wget -P /opt/bin https://storage.googleapis.com/kubernetes-release/release/v0.18.1/bin/linux/amd64/kube-scheduler
ExecStartPre=/usr/bin/chmod +x /opt/bin/kube-scheduler
ExecStart=/opt/bin/kube-scheduler \
  --master=127.0.0.1:8080
Restart=always
RestartSec=10
LimitNOFILE=65536

[X-Fleet]
MachineOf=deis-kube-apiserver.service
